extends layout

block content 
    h2= title

    form(method="POST" action="")
        div.form-group
            label(for="name") Car's name:
            input#name(type="text", name="name", required="true", value=(undefined===car ? "" : car.name))
        
        div.form-group
            label(for="price") Price (in CAD):
            input#price(type="number", name="price", required="true", value=(undefined===car ? "" : car.price))

        div.form-group
            label(for="description") Description:
            textarea#description(cols="22", rows="8", name="description", required="true")
                | #{undefined===car ? "" : car.description}

        div.form-group
            label(for="imageURL") imageURL: 
            input#imageURL(type="text", name="imageURL", required="true", value=(undefined===car ? "" : car.imageURL)) 

        button(type="submit") Submit
        
    if errors
        ul
            for error in errors 
                li!= error.msg